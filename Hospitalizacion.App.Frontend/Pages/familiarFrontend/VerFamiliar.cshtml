        <li class="list-group-item"><span id="etiqueta">Contacto : </span>@Model.Familiar.Telefono</li>
        <li class="list-group-item"><span id="etiqueta">Genero : </span>@Model.Familiar.Genero</li>
        <li class="list-group-item"><span id="etiqueta">Correo Electronico : </span>@Model.Familiar.Correo</li>
       
