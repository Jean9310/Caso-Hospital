                </tr>
            </thead>
            <tbody>
                @foreach (var pacienteFamiliar in Model.pf)



                {
                    <tr>
                        <th scope="row" hidden>@pacienteFamiliar.Id</th>
                        <td>@pacienteFamiliar.PacienteId</td>
                        @* <td>@paciente.Apellido</td>
                        <td>@paciente.Telefono</td>
                        <td>@paciente.Genero</td>
                            <td>@paciente.Direccion</td>
