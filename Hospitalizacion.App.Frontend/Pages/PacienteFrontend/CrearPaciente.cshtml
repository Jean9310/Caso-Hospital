@page
@model Hospitalizacion.App.Frontend.Pages.CrearPacienteModel
@{
  ViewData["Title"] = "crear Paciente";
}

<style>
  h1,
  legend {
    color: blue;
    text-align: center;
    text-decoration: underline;
    text-decoration-style: dashed double;
    text-transform: uppercase;
    margin-left: 35%;
    margin-right: 35%;
    font-size: 1.5 em;
  }

  .logo {
    background-image: url(https://img.freepik.com/foto-gratis/blur-hospital_1203-7957.jpg?w=2000);
  }

  #Nombre,
  #Apellido,
  #Telefono,
  #Ciudad,
  #Direccion,
  #Latitud,
  #Longitud,
  #Fecha,
  #Medico,
  #Enfermero,
  #Auxiliar {
    border-color: blue;
    border: inset;
    text-transform: uppercase;
    color: black;
  }

  input {
    border-color: black;
  }
</style>

<body class="logo">

  <h1>Crear Paciente</h1>
  <h3>@ViewData["Error"]</h3>

  <form method="POST">
    
    <h4>Informacion Especifica</h4>
    <div class="row">
      <div class="col">
        <span asp-for="Paciente.Direccion" class="input-group-text" id="Direccion">Direccion</span>
        <input type="text" asp-for="Paciente.Direccion" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
        <span asp-validation-for="Paciente.Direccion" class="text-danger"></span>
      </div>
      <div class="col">
        <span asp-for="Paciente.Ciudad" class="input-group-text" id="Ciudad">Ciudad</span>
        <input type="text" asp-for="Paciente.Ciudad" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
        <span asp-validation-for="Paciente.Ciudad" class="text-danger"></span>
      </div>
      <div>
        <br>
      </div>
      <div class="row">
        <div class="col">
          <span class="input-group-text" id="Fecha">Fecha Nacimiento</span>
          <input type="date" asp-for="Paciente.FechaNacimiento" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default">
          <span asp-validation-for="Paciente.FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="col">
          <span class="input-group-text" id="Latitud">Latitud</span>
          <input type="text" asp-for="Paciente.Latitud" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default">
          <span asp-validation-for="Paciente.Latitud" class="text-danger"></span>
        </div>
        <div class="col">
          <span class="input-group-text" id="Longitud">Longitud</span>
          <input type="text" asp-for="Paciente.Longitud" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" min="0" max="90">
          <span asp-validation-for="Paciente.Longitud" class="text-danger"></span>
        </div>
      </div>
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <legend>Informacion</legend>
      <div class="input-group mb-3">
        <span asp-for="Paciente.Nombre" class="input-group-text" id="Nombre">Nombre</span>
        <input type="text" asp-for="Paciente.Nombre" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
        <span asp-validation-for="Paciente.Nombre" class="text-danger"></span>
        <span asp-for="Paciente.Apellido" class="input-group-text" id="Apellido">Apellido</span>
        <input type="text" asp-for="Paciente.Apellido" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
        <span asp-validation-for="Paciente.Apellido" class="text-danger"></span>
        <span asp-for="Paciente.Telefono" class="input-group-text" id="Telefono">Telefono</span>
        <input type="text" asp-for="Paciente.Telefono" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default">
        <span asp-validation-for="Paciente.Telefono" class="text-danger"></span>
        <select asp-for="Paciente.Genero" class="form-select" aria-label="Default select example">
          <option selected>Genero</option>
          <option value="Femenino">Femenino</option>
          <option value="Masculino">Masculino</option>
        </select>
        <span asp-validation-for="Paciente.Genero" class="form-danger"></span>
      </div>

      <div class="mb-3">

      

       
        <div class="col">
          <span class="input-group-text" id="Medico">Medico</span>
           <select asp-for="Medico.Id" class="form-select" aria-label="Default select example">
            <option selected>Seleccione un Medico</option>

            @foreach (var medico in Model.Medicos)
          {
            <option value="@medico.Id">@medico.Nombre @medico.Apellido</option>
            
          } 
                   
          </select>
          <span asp-validation-for="Medico.Id" class="form-danger"></span>
        </div>
        <div class="col">
          <span class="input-group-text" id="Enfermero">Enfermero</span>
            <select asp-for="Enfermero.Id" class="form-select" aria-label="Default select example">
            <option selected>Seleccione un Enfermero</option>
           @foreach (var enfermero in Model.Enfermeros)
          {
            <option value="@enfermero.Id">@enfermero.Nombre @enfermero.Apellido</option>
          }                   
          </select>
          <span asp-validation-for="Enfermero.Id" class="form-danger"></span>
        </div>

        <div class="col">
          <span class="input-group-text" id="Auxiliar">Auxiliar</span>
             <select asp-for="Auxiliar.Id" class="form-select" aria-label="Default select example">
            <option selected>Seleccione un Auxiliar</option>
           @foreach (var auxiliar in Model.Auxiliares)
          {
            <option value="@auxiliar.Id">@auxiliar.Nombre @auxiliar.Apellido</option>
          }                   
          </select>
          <span asp-validation-for="Auxiliar.Id" class="form-danger"></span>
        </div>

        <div style="text-align: center;">
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div><br>
        <form>
          <INPUT TYPE="button" VALUE="Retornar" onClick="history.go(-1);" class="btn btn-outline-success"
            style="margin-left:47% ;margin-rigth:50%;">
        </form>
  </form>
</body>